<!-- This section holds everything used in the first part of the story   -->

<section class='stepper'>

  <!-- Intro stuff lives here   -->
  <div class='stepper__intro step0'>
    <img inline src='assberg_art_no_title_mobile-01.svg'>
    <div class='logo'><img inline src='/pudding/wordmark.svg'>INVESTIGATES...</div> 

    <h1 class='stepper__hed'>IS <br><span class='hed-highlight' id='hed-ass'>"ASS"</span><br> THE MOST <span class='hed-highlight'>COMPLICATED</span> WORD IN ENGLISH?</h1>
    <div class='sound-warning'>(SOUND ON)</div>
      <p class='stepper__byline'>By
        <strong>{{meta.author.name}}</strong>
      </p>
    <div class='tap--first'>
      <span>TAP ANYWHERE TO FIND OUT</span>
   </div>
  </div>

  <!-- All visuals live here   -->

  <div class='stepper__graphics'>

    <div class='stepper__video step0' >
    </div>

    <div class='stepper__video step1'>
    <span class='subtitle'>I think the hardest word to truly master has been the word, "ass."</span>
      <video class='ismo step1' src='assets/videos/ismo_1.mp4' placeholder='assets/images/ismo_thumbnail.jpg' playsinline loop></video>
    </div>

    <div class='stepper__video step2'>
      <div class='pause-overlay'>
        <img inline src='pause-circle.svg'>
      </div>
    </div>

    <div class='stepper__video step3'>
      <video class='ismo step3' src='assets/videos/ismo_2.mp4' placeholder='assets/images/ismo_thumbnail.jpg' playsinline loop></video>
    </div>

    <div class='stepper__video step4'>
      <video class='ismo step4' src='assets/videos/ismo_3.mp4' placeholder='assets/images/ismo_thumbnail.jpg' playsinline loop></video>
    </div>

    <div class='stepper__video step5'>
      <video class='ismo step5' src='assets/videos/ismo_4.mp4' placeholder='assets/images/ismo_thumbnail.jpg' playsinline loop></video>
    </div>

    <div class='stepper__video step6'>
      <video class='ismo step6' src='assets/videos/ismo_5.mp4' placeholder='assets/images/ismo_thumbnail.jpg' playsinline loop></video>
    </div>

  </div>

  <!-- Forward and back buttons live here   -->

  <div class='stepper__tap'>
    <div class='tap tap--left'>
      <svg class='tap--left' width=30vw height=4vh>
        <g>
          <rect fill='#1B7EBE' width=30vw height=5vh ></rect>
          <img inline src='arrow-left.svg'>
        </g>
      </svg>
    </div>

    <div class='tap tap--right'>
      <svg class='tap--right' width=30vw height=4vh>
        <g>
          <rect fill='#1B7EBE' width=30vw height=5vh></rect>
          <img inline src='arrow-right.svg'>
        </g>
      </svg>
    </div>

    <div class='tap tap--final'>
      <svg class='tap--final' width=10vh height=10vh>
        <g>
          <img inline src='arrow-down-circle.svg'>
        </g>
      </svg>
    </div>
  </div>

  <!-- Steps live here   -->

  <div class='stepper__steps'>

    <div id='video-annotation' class='stepper__annotation step1'>
      <span>{{doc.step1}}</span>
    </div>

    <div id='video-annotation' class='stepper__annotation step2'>
      <span>{{doc.step2}}</span>
    </div>

    <div id='video-annotation' class='stepper__annotation step3'>{{doc.step3}}</span>
