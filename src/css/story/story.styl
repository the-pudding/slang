/* CUSTOM STORY STYLE */

@media screen and (max-width: 600px)

  body 
    background-color #f5f5f5
    color #333333   

  .stepper 
    position absolute
    height 100%
    width 100%
    opacity 0 
    background-image linear-gradient(#f5f5f5, #b2eafc)

  .stepper__intro
    opacity 0
    height  100%
    width 100%
    top 0px
    left 0px
    position absolute


  .header-image 
    padding-top 1%

  .stepper__graphics
    position absolute
    height 100%
    width 100%
    left 0px
    top 0px

  .stepper__video
    opacity 0
    position absolute
    height 98%
    width 90%
    top 2%
    left 50% 
    margin-left -45%


  video 
    display block
    object-fit cover
    overflow hidden
    height 70%

  .script-container 
    position relative
    width 88%
    height 68%
    text-align justify
    font-style normal
    font-weight normal
    font-size 14px
    color rgba(186, 186, 186, 0.4)
    margin auto
    overflow hidden
    opacity 0
    top 2%
    font-family $roboto

  .script-line.active
    opacity 1
    background-color #333333
    color #f5f5f5

  .stepper__hed
    font-family $roboto
    font-weight Bold
    text-shadow 2px 2px 2px #2693C2
    font-size 36px

  .tap--first
    font-family $roboto
    padding 5px
    background-color #1B7EBE
    margin-left -30%
    width 60%
    position: absolute
    left 50%
    text-align center
    pointer-events none
    opacity 0
    bottom 6%
    color white

  .tap--right
    left 55%
    color white 

  .tap--left
    right 55%
    color white 

  .stepper__tap
    position absolute
    opacity 0
    display block
    height 100%
    width 100%
    top 0%
    left 0%

  .tap 
    opacity 0
    pointer-events auto
    position absolute
    bottom 5%
    z-index 100
    
  .stepper__steps
    font-family $atlas
    position absolute
    height 20%
    width 100%
    left 0px
    top 70%
    font-size 16px
    display flex
    justify-content center
    align-items center
    text-align left


  .stepper__annotation
    opacity 0


  #video-annotation
    position absolute
    max-width 88%
    left 50% 
    margin-left -44%
    text-align left

  #scroll
    opacity 0
    display none 
    position relative
  

  span#ass-instance
    color #b2eafc
    opacity 1


  .scroll-script-line
    color rgba(186, 186, 186, 0)
    

  #scroll.active
    display inline
    opacity 1
  

  .scroll__text 
    position relative
    padding 0
    max-width 90%
    margin 0 auto
    pointer-events none

  .scroll__graphic
    background-image linear-gradient(#f5f5f5, #b2eafc)
    font-family $roboto
    position -webkit-sticky
    position sticky
    left 0
    width 100%
    margin 0
    pointer-events none
    -webkit-transform translate3d(0, 0, 0)
    -moz-transform translate3d(0, 0, 0)
    transform translate3d(0, 0, 0)

  .scroll__graphic .chart 
    text-align: justify
    position: relative
    width: 88%
    height: 68%
    font-style: normal
    font-weight: normal
    font-size: 12px
    color: rgba(186, 186, 186, 0.4)
    margin: auto
    top:2

  .step 
    margin: 0 auto 150% auto
    color: #333333
    pointer-events: none
    font-family $atlas
  

  .step:last-child 
    margin-bottom: 40%
  

  .step p 
    text-align: left
    padding: 2rem
    font-size: 16px
    background-color: rgba(245,245,245,.95)
    line-height: 1.5
  

  .ass-label 
    padding-left: 3%
    padding-bottom 1%
    top: 3%
    position: relative
    display:none
  

  .ass-label.active 
    display:block

  .scroll-script-line
    font-size 14px
    color rgba(186, 186, 186, 0)

  .scroll__text
    font-family $lora

  .usage-examples 
    color #333333
    display none
    font-size 15px
    text-align left

  .usage-examples.active
    display block
    pointer-events auto

  .usage-examples-hidden 
    display block

  .stack__container .chart
    background-image linear-gradient(#f5f5f5, #b2eafc)

  .stack__container .prose
    background-image linear-gradient(#b2eafc,#f5f5f5)
    font-family $atlas
    font-size 16px
    padding-top 20%
    padding-bottom 20%
    padding-left 5%
    padding-right 5%
    text-align left
    line-height 1.65rem

  .slider-container 
    width: 100%
    position: fixed
    top: 70%
    pointer-events: auto
  
  .slider 
    -webkit-appearance: none
    appearance: none
    border-radius: 5px
    width: 80% 
    left:10%
    height: 5px
    background: #333333
    outline: none 
    opacity: 0.7
    -webkit-transition: .2s 
    transition: opacity .2s
    position: absolute

  .slider:hover 
    opacity: 1
  

  .slider::-webkit-slider-thumb 
    -webkit-appearance: none
    appearance: none
    width: 15px
    height: 15px
    border-radius: 50%
    background: lightblue
    cursor: pointer
  

  .slider::-moz-range-thumb 
    width: 10px 
    height: 10px 
    border-radius: 50%
    background: lightblue 
    cursor: pointer 
  
  circle.active
    opacity:1
  

  .year-label 
    font-size: 12px
    fill: #333333
    transform: translate(-15px, 0px)
  

  .stack
    position: absolute
    opacity: 0
    display: none
  

  .stack.active
    display: inline
    height: 100%

  .stack .chart
    font-family $roboto

  .chart 
    height: 100%
    text-align: center
    overflow: hidden

  .left-shape
    shape-outside: polygon(0 0, 50% 0, 10% 20%, 10% 60%, 50% 100%, 0% 100%)
    float: left
    width: 50%


  #left-shape1
    height: 101em
  

  #right-shape1
    height: 101em
  

  #left-shape2
    height: 65em
  

  #right-shape2
    height: 65em
  

  #left-shape3
    height: 42em

  #right-shape3
    height 42em

  #left-shape4
    height: 150em

  #right-shape4
    height 150em

  .right-shape
    shape-outside: polygon(100% 0, 50% 0, 90% 20%, 90% 60%, 50% 100%, 100% 100%)
    float: right
    width: 50%
    
  .overlay 
    position fixed
    display none
    width 100%
    height 100%
    top 0
    left 0
    right 0
    bottom 0
    background-color rgba(245,245,245,0.9)
    z-index 2
    cursor pointer

  .overlay.active
    display flex

  .time-line 
    position fixed
    top 10%
    justify-content center

  .citationContainer 
    background-color lightblue
    width 80%
    left 50%
    margin-left -40%
    top 37%
    position fixed
    padding-left 5%
    padding-right 5%
    padding-top 2%
    padding-bottom 2%
    text-align left
    color #333333
    font-family $roboto


  .sense-container
    position absolute
    bottom 80%
    width 80%
    left 50%
    margin-left -40%
    text-align left


  .word-container
    text-align left
    font-size 40px
    font-family $roboto
    padding-left 3%
    position fixed
    top 3%

  .active
    opacity: 1
    z-index: 101
