/* CUSTOM STORY STYLE */


#content
  overflow hidden
.stepper__intro
  svg
    text
      display none
      font-family 'Atlas Grotesk Web'
    .cls-38
      font-family 'Atlas Grotesk Web'
      font-size 12px
      letter-spacing 0px
    .cls-45
      display none

@media screen and (max-width: 600px)

  body
    background-color #f5f5f5
    color #333333

  .stepper
    position absolute
    height 100%
    width 100%
    opacity 0
    background-image linear-gradient(#f5f5f5, #b2eafc)

  .stepper__intro
    opacity 0
    height  100%
    width 100%
    top 0px
    left 0px
    position absolute
    //background-image url('assets/images/assberg_art_title_mobile_medium.svg')
    background-repeat no-repeat
    background-size cover

  .logo
    position absolute
    top 3%
    width 40%
    margin 0 30% 0 30%
    text-align center
    font-family $atlas
    font-size 11px
    letter-spacing 1px
    font-weight 600


  .header-image
    padding-top 1%

  .stepper__graphics
    position absolute
    height 100%
    width 100%
    left 0px
    top 0px

  .stepper__video
    opacity 0
    position absolute
    height 98%
    width 90%
    top 2%
    left 50%
    margin-left -45%

  .subtitle
    opacity 0
    position fixed
    bottom 50%
    font-size 24px
    font-family $atlas
    padding-left 3%
    color #f5f5f5


  video
    display block
    object-fit cover
    overflow hidden
    height 70%

  .script-container
    position relative
    width 88%
    height 68%
    text-align justify
    font-style normal
    font-weight normal
    font-size .89rem
    color rgba(186, 186, 186, 0.4)
    margin auto
    overflow hidden
    opacity 0
    top 2%
    font-family $roboto

  .script-line.active
    opacity 1
    background-color #213338
    color #f5f5f5

  .pause-overlay
    display flex
    opacity 0
    object-fit cover
    overflow hidden
    height 70%
    width 100.3%
    background-color rgba(235, 87, 87, 0.65)
    justify-content center
    align-items center
    svg
      circle, line
        stroke white

  .stepper__hed
    font-family $atlas
    font-weight bold
    text-shadow 2px 2px 2px #2693C2
    font-size 34px
    position absolute
    top 21%
    text-align center
    max-width 70%
    left 50%
    margin-left -35%

  .hed-highlight
    color #f5f5f5
    background-color #333333

  #hed-ass
    font-size 48px

  .sound-warning
    position absolute
    bottom 35%
    font-family $atlas
    color #f5f5f5
    letter-spacing 1px
    font-size 11px
    right 5%

  .stepper__byline
    position absolute 
    bottom 3%
    text-align right
    right 1%
    color #f5f5f5
    font-family $atlas
    font-size 12px
    border-bottom 0px

  .stepper__byline strong
    color #f5f5f5
    text-decoration-color #f5f5f5
    border-bottom 0px solid #f5f5f5

  .tap--first
    font-family $atlas
    padding 5px
    background-color #f5f5f5
    margin-left -30%
    width 60%
    position: absolute
    left 50%
    text-align center
    pointer-events none
    opacity 0
    bottom 24%
    color #333333
    font-size 11px
    letter-spacing 1px

  .tap--right
    left 55%
    color white

  .tap--left
    right 55%
    color white

  .tap--back
    height 30%
    display flex
    justify-content center
    padding-top 5%
    svg
      width 25px

  .stepper__tap
    position absolute
    opacity 0
    display block
    height 100%
    width 100%
    top 0%
    left 0%

  .tap
    opacity 0
    pointer-events auto
    position absolute
    bottom 5%
    z-index 100
    background #1B7EBE
    background #70a5b5
    border-radius 4px
    padding 3px 2px
    svg
      transform translate(0,1px)
      rect
        display none

  .tap--final
    background none


  .stepper__steps
    font-family $atlas
    position absolute
    height 20%
    width 100%
    left 0px
    top 70%
    font-size 1rem
    display flex
    justify-content center
    align-items center
    text-align left


  .stepper__annotation
    opacity 0
    span
      font-size 14px
      line-height 1.1


  #video-annotation
    position absolute
    max-width 88%
    left 50%
    margin-left -44%
    text-align left
    font-size 14px

  .scroll
    opacity 0
    display none
    position relative
    margin-top 100vh

  .section-title
    font-size 24px
    padding-left 6%
    font-family $atlas
    paddint-top 5%

  div.step > p.first-graf
    padding .5rem 1.5rem 1.5rem 1.5rem
    margin 0

  #first-scroll
    padding 2rem 0rem 0rem 0rem


  span#ass-instance
    color rgba(186,186,186,0.4)
    opacity 1


  .scroll-script-line
    color rgba(186, 186, 186, 0)


  .scroll.active
    display block
    opacity 1


  .scroll-container
    background-color #d3bfa6
    padding-bottom 50px
    background linear-gradient(to bottom, #b6ebfc 0%, #fceab9 50%, #f5f5f5 100%)


  .scroll__text
    position relative
    padding 0
    margin 0 auto
    pointer-events none


  .scroll__graphic
    //background-color #d3bfa6
    font-family $roboto
    position relative
    width 100%
    margin 0
    //pointer-events none
    transform translate3d(0, 0, 0)
    margin-top 5%
    margin-bottom 50px

  .scroll__graphic .chart
    text-align: justify
    position: relative
    width: 88%
    height: 68%
    font-style: normal
    font-weight: normal
    font-size: 12px
    color: rgba(186, 186, 186, 0.4)
    margin: auto
    top:2

  .step
    margin: 0 auto 0 auto
    color: #333333
    //pointer-events: none
    font-family $atlas

  .step p
    text-align: left
    font-size: 16px
    line-height: 1.5
    font-weight 400
    padding 0 1.5rem


  .ass-label
    padding-left 3%
    padding-bottom 1%
    top 3%
    position relative
    display block


  .ass-label.active
    display:block

  .scroll-script-line
    font-size 14px
    color rgba(186, 186, 186, 0)

  .usage-examples
    color #333333
    display block
    font-size 18px
    text-align left
    padding 0 1rem
    margin-top 20px
    font-weight 500
    font-family $atlas
    line-height 1.5

  .usage-examples.active
    display block
    pointer-events auto

  .usage-examples-hidden
    display block

  .stack__container .chart
    background-image linear-gradient(#f5f5f5, #b2eafc)

  .stack__container .prose
    background-image linear-gradient(#b2eafc,#f5f5f5)
    font-family $atlas
    font-size 16px
    padding-top 20%
    padding-bottom 20%
    padding-left 5%
    padding-right 5%
    text-align left
    line-height 1.65rem

  .slider-container
    width calc(100% - 40px)
    margin 0 auto
    margin-top 60px
    margin-bottom 10px
    pointer-events auto
    position relative
    &:before
      content 'Slide to view citations â†’'
      position absolute
      font-family 'Atlas Grotesk Web'
      font-size 12px
      left 50%
      right 0px
      top -15px
      text-align center
      transform translate(-50%,0)

  .slider
    -webkit-appearance: none
    appearance: none
    margin 0 auto
    width 100%

    border-radius 3px
    height: 4px
    background-color rgba(51,51,51,.31)
    outline: none
    opacity 1

  .slider:hover
    opacity: 1


  .slider::-webkit-slider-thumb
    -webkit-appearance: none
    appearance: none
    width: 16px
    height: 16px
    border-radius: 50%
    background #F24C3D
    cursor pointer

  #iceberg0
    pointer-events auto


  .slider::-moz-range-thumb
    width: 16px
    height: 16px
    border-radius: 50%
    background: #F24C3D
    cursor: pointer

  .sliderIceberg
    -webkit-appearance: none
    appearance: none
    border-radius: 3px
    width: 80%
    left:10%
    height: 3px
    background: #333333
    outline: none
    opacity: 0.7
    -webkit-transition: .2s
    transition: opacity .2s
    position: absolute

  .sliderIceberg:hover
    opacity: 1


  .sliderIceberg::-webkit-slider-thumb
    -webkit-appearance: none
    appearance: none
    width: 15px
    height: 15px
    border-radius: 50%
    background: #b2eafc
    cursor: pointer


  .sliderIceberg::-moz-range-thumb
    width: 10px
    height: 10px
    border-radius: 50%
    background: #b2eafc
    cursor: pointer

  .time-line
    path
      stroke-width 16px
      stroke rgba(0, 0, 0, 0.16)
    line
      stroke rgba(93, 93, 93, 0.55)
      stroke-width 3px

  line.active
    opacity:1
    stroke #f24c3d




  .year-label
    font-size: 16px
    font-weight 600
    fill: #333333
    transform: translate(0px, -15px)
    text-anchor middle


  .stack
    position: absolute
    opacity: 0
    display: none


  .stack.active
    display: inline
    height: 100%

  .stack .chart
    font-family $atlas

  .chart
    height: 100%
    text-align: center
    overflow: hidden

  .left-shape
    shape-outside: polygon(0 0, 50% 0, 10% 20%, 10% 60%, 50% 100%, 0% 100%)
    float: left
    width: 50%


  #left-shape1
    height 106em


  #right-shape1
    height 106em


  #left-shape2
    height: 71em

  #right-shape2
    height: 71em

  #left-shape3
    height: 65em

  #right-shape3
    height 65em

  #left-shape4
    height: 155em

  #right-shape4
    height 155em

  .right-shape
    shape-outside: polygon(100% 0, 50% 0, 90% 20%, 90% 60%, 50% 100%, 100% 100%)
    float: right
    width: 50%

  .overlay
    position fixed
    display none
    width 100%
    height 100%
    top 0
    left 0
    right 0
    bottom 0
    background-color rgba(245,245,245,0.9)
    z-index 2
    cursor pointer

  .overlay.active
    display flex

  .time-line
    position relative
    //top 10%
    justify-content center
    height 50px

  .citationContainer
    //background-color #b2eafc
    width calc(100% - 40px)
    //left 50%
    //margin-left -40%
    //top 37%
    //position fixed
    //padding-left 5%
    //padding-right 5%
    //padding-top 2%
    //padding-bottom 2%
    text-align left
    color #f24c3d
    font-weight 600
    font-size 14px
    margin 0 auto
    margin-top 8px
    margin-bottom 20px
    //font-family $roboto

  .citationContainerIceberg
    background-color #b2eafc
    width 80%
    left 50%
    margin-left -40%
    top 37%
    position absolute
    padding-left 5%
    padding-right 5%
    padding-top 2%
    padding-bottom 2%
    text-align left
    color #333333
    font-family $atlas

  .chart-title
    font-family $atlas
    text-align left
    font-size 24px
    padding 0 1rem
    font-weight 600
    margin-top 50px

  .stack__container .chart-title
    text-align center
    margin-left 0%

  .sense-container
    position absolute
    bottom 80%
    width 80%
    left 50%
    margin-left -40%
    text-align left
    display inline-block


  .word-container
    text-align left
    font-size 40px
    font-family $atlas
    line-height 40px
    padding-left 3%
    position absolute
    top 3%

  .active
    opacity: 1
    z-index: 101
