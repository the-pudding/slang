  margin 0 auto
  font-weight 400
  width calc(100% - 40px)
  line-height 1.5
  .first
    text-decoration underline
  .sense-container
    text-decoration none


.active
  opacity: 1
  z-index 101

.active.stepper__intro
  z-index 100000000

@media screen and (max-width: 376px)
  .word-container, .usage-examples
    padding 0px
  .stack__container .chart .iceberg-text
    width 100%

@media screen and (max-width: 350px)
  .stack__container .chart .iceberg-text .reveal-click
    font-size 11px
    background rgba(255,255,255,0.588)
  .stepper__steps
    height calc(30% - 40px)
  .tap
    svg
      height 30px
      bottom 5px
      width 25px
    &:before
      height 35px
