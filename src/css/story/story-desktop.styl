@media screen and (min-width: 600px)

  #advisory
    display none

  body 
    background-color #f5f5f5
    color #333333   
    width 100%

  .stepper 
    position relative
    height 100%
    width 100%
    opacity 0 
    background-image linear-gradient(#f5f5f5, #b2eafc)

  .stepper__intro
    opacity 0
    height 100%
    width 100%
    top 0px
    left 0px
    display flex
    flex-direction column
    justify-content space-between
    position absolute
    background-image url('assets/images/assberg_art_browser-01.svg')
    background-repeat no-repeat
    background-size cover
    background-position center

  .logo
    text-align center
    font-family $atlas
    position relative
    width 120px
    margin 0 auto
    z-index 100
    margin-top 30px
    margin-bottom 30px
    font-size 11px
    letter-spacing 1px
    font-weight 600
    p
      margin 0 auto
      font-size 12px

  .stepper__hed
    font-family $atlas
    position relative
    font-weight 500
    letter-spacing -1px
    font-size 44px
    text-align center

  .hed-highlight
    color #f5f5f5
    background-color #333333
    padding 0 5px

  #hed-ass
    font-size inherit

  .sound-warning
    font-family $atlas
    color #f5f5f5
    position relative
    z-index 100
    font-size 15px
    text-align center
    margin-bottom 10px
    margin-top 10px

  .stepper__byline
    text-align center
    color #f5f5f5
    font-family $atlas
    font-size 16px
    position relative
    z-index 100
    border-bottom 0px
    margin 0 auto
    background none
    margin-bottom 10px
    pointer-events all
    margin-bottom 30px
    a
      pointer-events all
      //text-decoration underline
      //text-decoration-color white
      border none


  .stepper__byline strong
    color #f5f5f5
    text-decoration-color #f5f5f5
    border-bottom 0px solid #f5f5f5

  .header-image 
    padding-top 1%

  .stepper__graphics
    position absolute
    height 100%
    width 100%
    left 0px
    top 0px

  .stepper__video
    opacity 0
    position absolute
    height 98%
    width 90%
    top 2%
    left 50% 
    margin-left -45%

  .subtitle
    opacity 0
    position fixed
    bottom 50%
    font-size 40px
    font-family $atlas
    left 50%
    width 70%
    margin-left -35%
    color #f5f5f5

  video 
    display block
    object-fit cover
    overflow hidden
    height 70%

  .script-container 
    position relative
    width 88%
    height 68%
    text-align justify
    font-style normal
    font-weight normal
    font-size 1.5rem
    color rgba(186, 186, 186, 0.4)
    margin auto
    overflow hidden
    opacity 0
    top 2%
    font-family $roboto

  .script-line.active
    opacity 1
    background-color #333333
    color #f5f5f5

  .pause-overlay
    display flex
    opacity 0
    object-fit cover
    overflow hidden
    height 70%
    width 100.3%
    background-color rgba(235, 87, 87, 0.65)
    justify-content center
    align-items center

  .tap--first
    font-family $atlas
    padding 5px
    background-color #f5f5f5
    text-align center
    pointer-events none
    opacity 0
    margin 0 auto
    color #333333
    font-size 15px
    letter-spacing 1px
    position relative
    z-index 100
    border-radius 3px
    margin-bottom 30px
    max-width 300px
    width 90%

  .tap--right
    left 55%
    color white 

  .tap--left
    right 55%
    color white 

  .tap--back
    height 30%
    display flex
    justify-content center 
    padding-top 5%

  .stepper__tap
    position absolute
    opacity 0
    display block
    height 100%
    width 100%
    top 0%
    left 0%

  .tap
    opacity 0
    pointer-events auto
    position absolute
    bottom 5%
    z-index 100
    background #1B7EBE
    background #70a5b5
    border-radius 4px
    padding 3px 2px
    svg
      transform translate(0,1px)
      rect
        display none

  .tap--final
    background none
    
  .stepper__steps
    font-family $atlas
    position absolute
    height 20%
    width 100%
    left 0px
    top 70%
    font-size 1.5rem
    display flex
    justify-content center
    align-items center
    text-align left


  .stepper__annotation
    opacity 0

  #video-annotation
    position absolute
    max-width 88%
    left 50% 
    margin-left -44%
    text-align left

  .scroll
    opacity 0
    display none 
    position relative

  .scroll-container
    background-color #d3bfa6
    padding-bottom 50px
    background linear-gradient(to bottom, #b6ebfc 0%, #fceab9 50%, #f5f5f5 100%)

  .scroll-container .step 
    max-width 40rem
    margin 0 auto 0 auto
    color #333333
    font-family $atlas

  .step p
    text-align left
    font-size 18px
    line-height 1.65
    font-weight 400
    padding 0 1.5rem

  .scroll__graphic
    font-family $atlas
    position relative
    max-width 40rem
    margin 0
    transform translate3d(0, 0, 0)
    margin-top 5%
    margin-bottom 50px
    text-align justify
    position relative
    font-style normal
    font-weight normal
    font-size 12px
    margin auto
    top 2

  div.step > p.first-graf
    padding .5rem 1.5rem 1.5rem 1.5rem
    margin 0

  .scroll.active
    display block
    opacity 1

  .usage-examples
    color #333333
    display block
    font-size 18px
    text-align left
    padding 0 1rem
    margin-top 20px
    font-weight 500
    font-family $atlas
    line-height 1.5
    margin-top 30px

  .usage-examples.active
    display block
    pointer-events auto

  .usage-examples-hidden
    display block

  .stack
    position relative
    opacity 0
    display none
    padding-top 5%

  .stack.active
    display flex
    justify-content center
    height 100%

  .stack__container .chart
    background-image linear-gradient(#f5f5f5, #b2eafc)

  .stack__container .prose
    background-image linear-gradient(#b2eafc,#f5f5f5)
    max-width 100%
    padding-top 20%
    padding-bottom 20%

  .prose p
    max-width 60%
    text-align left
    line-height 1.65rem
    font-family $atlas
    position relative
    left 50%
    margin-left -30%
    font-weight 400

  .slider-container
    width calc(100% - 40px)
    margin 0 auto
    margin-top 60px
    margin-bottom 10px
    pointer-events auto
    position relative
    &:before
      content 'Slide to view citations â†’'
      position absolute
      font-family 'Atlas Grotesk Web'
      font-size 12px
      left 50%
      right 0px
      top -15px
      text-align center
      transform translate(-50%,0)

  .slider
    -webkit-appearance: none
    appearance: none
    margin 0 auto
    width 100%

    border-radius 3px
    height: 4px
    background-color rgba(51,51,51,.31)
    outline: none
    opacity 1

  .slider:hover
    opacity: 1


  .slider::-webkit-slider-thumb
    -webkit-appearance: none
    appearance: none
    width: 16px
    height: 16px
    border-radius: 50%
    background #F24C3D
    cursor pointer

   #iceberg0
    pointer-events auto
    .usage-wrapper
      .usage-rows
        opacity 1
        &:first-of-type
          display none
          opacity .5
        .def-container
          .slider-container
            margin-top 30px
          .citationContainer
            margin-bottom 60px
            position relative
            &:after
              content ''
              width 100px
              height 2px
              background black
              opacity .2
              position absolute
              bottom -35px
              left 0px
              right 0px
              margin 0 auto

  .slider::-moz-range-thumb
    width: 16px
    height: 16px
    border-radius: 50%
    background: #F24C3D
    cursor: pointer

  .sliderIceberg
    -webkit-appearance: none
    appearance: none
    border-radius: 3px
    width: 80%
    left:10%
    height: 3px
    background: #333333
    outline: none
    opacity: 0.7
    -webkit-transition: .2s
    transition: opacity .2s
    position: absolute

  .sliderIceberg:hover
    opacity: 1


  .sliderIceberg::-webkit-slider-thumb
    -webkit-appearance: none
    appearance: none
    width: 15px
    height: 15px
    border-radius: 50%
    background: #b2eafc
    cursor: pointer


  .sliderIceberg::-moz-range-thumb
    width: 10px
    height: 10px
    border-radius: 50%
    background: #b2eafc
    cursor: pointer

  .time-line
    .background-bar
      stroke-width 16px
      stroke rgba(0, 0, 0, 0.16)
    .citation
      stroke rgba(93, 93, 93, 0.55)
      stroke-width 3px
    .active
      opacity:1
      stroke #f24c3d

  line.active
    opacity:1
    stroke #f24c3d

  .year-label
    font-size: 14px
    font-weight 600
    fill: #333333
    transform: translate(0px, -5px)
    text-anchor middle

  .stack
    position absolute
    opacity 0
    display none


  .stack.active
    display inline
    height 100%

  .stack .chart
    font-family $atlas
    height 100%
    text-align center
    overflow hidden
    
  .left-shape
    shape-outside: polygon(0 0, 50% 0, 10% 20%, 10% 60%, 50% 100%, 0% 100%)
    float: left
    width: 50%

  #left-shape1
    height 106em

  #right-shape1
    height 106em

  #left-shape2
    height: 71em

  #right-shape2
    height: 71em

  #left-shape3
    height: 65em

  #right-shape3
    height 65em

  #left-shape4
    height: 155em

  #right-shape4
    height 155em

  .right-shape
    shape-outside: polygon(100% 0, 50% 0, 90% 20%, 90% 60%, 50% 100%, 100% 100%)
    float: right
    width: 50%

  .overlay
    position fixed
    display none
    width 100%
    height 100%
    top 0
    left 0
    right 0
    bottom 0
    background-color rgba(245,245,245,0.9)
    z-index 2
    cursor pointer

  .overlay.active
    display flex

  .time-line
    position relative
    justify-content center
    height 50px

  .citationContainer
    width calc(100% - 40px)
    text-align left
    color #f24c3d
    font-weight 600
    font-size 14px
    margin 0 auto
    margin-top 8px
    margin-bottom 20px

  .citationContainerIceberg
    background-color #b2eafc
    width 80%
    left 50%
    margin-left -40%
    top 37%
    position absolute
    padding-left 5%
    padding-right 5%
    padding-top 2%
    padding-bottom 2%
    text-align left
    color #333333
    font-family $atlas

  .chart-title
    font-family $atlas
    text-align left
    font-size 24px
    padding 0 1rem
    font-weight 600
    margin-top 50px

  .stack__container .chart-title
    text-align center
    margin-left 0%

  .sense-container
    width 80%
    text-align left

  .word-container
    text-align left
    font-size 12px
    padding 0 1rem
    font-family $atlas
    line-height 40px
    margin 0 auto
    line-height 1.5
    .first
      text-decoration underline
    .sense-container
      text-decoration none

  .active
    opacity: 1
    z-index: 101
