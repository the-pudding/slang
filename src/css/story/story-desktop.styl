/* CUSTOM STORY STYLE */

@media screen and (min-width: 600px)

  body 
    background-color #f5f5f5
    color #333333   
    width 100%

  .stepper 
    position absolute
    height 100%
    width 100%
    opacity 0 
    background-image linear-gradient(#f5f5f5, #b2eafc)

  .stepper__intro
    opacity 0
    height  100%
    width 100%
    top 0px
    left 0px
    position absolute
    background-image url('assets/images/assberg_desktop-01.svg')
    background-repeat no-repeat
    background-size cover

  .header-image 
    padding-top 1%

  .stepper__graphics
    position absolute
    height 100%
    width 100%
    left 0px
    top 0px

  .stepper__video
    opacity 0
    position absolute
    height 98%
    width 90%
    top 2%
    left 50% 
    margin-left -45%

  .subtitle
    opacity 0
    position fixed
    bottom 50%
    font-size 40px
    font-family $atlas
    left 50%
    width 70%
    margin-left -35%
    color #f5f5f5


  video 
    display block
    object-fit cover
    overflow hidden
    height 70%

  .script-container 
    position relative
    width 88%
    height 68%
    text-align justify
    font-style normal
    font-weight normal
    font-size 1.5rem
    color rgba(186, 186, 186, 0.4)
    margin auto
    overflow hidden
    opacity 0
    top 2%
    font-family $roboto

  .script-line.active
    opacity 1
    background-color #333333
    color #f5f5f5

  .pause-overlay
    display flex
    opacity 0
    object-fit cover
    overflow hidden
    height 70%
    width 100.3%
    background-color rgba(235, 87, 87, 0.65)
    justify-content center
    align-items center

  .stepper__hed
    font-family $roboto
    font-weight Bold
    text-shadow 2px 2px 2px #2693C2
    font-size 36px

  .tap--first
    font-family $roboto
    padding 5px
    background-color #1B7EBE
    margin-left -30%
    width 60%
    position: absolute
    left 50%
    text-align center
    pointer-events none
    opacity 0
    bottom 6%
    color white

  .tap--right
    left 55%
    color white 

  .tap--left
    right 55%
    color white 

  .tap--back
    height 30%
    display flex
    justify-content center 
    padding-top 5%

  .stepper__tap
    position absolute
    opacity 0
    display block
    height 100%
    width 100%
    top 0%
    left 0%

  .tap 
    opacity 0
    pointer-events auto
    position absolute
    bottom 5%
    z-index 100
    
  .stepper__steps
    font-family $atlas
    position absolute
    height 20%
    width 100%
    left 0px
    top 70%
    font-size 1.5rem
    display flex
    justify-content center
    align-items center
    text-align left


  .stepper__annotation
    opacity 0


  #video-annotation
    position absolute
    max-width 88%
    left 50% 
    margin-left -44%
    text-align left

  .scroll
    opacity 0
    display none 
    position relative

  .section-title
    font-size 24px
    padding-left 6%
    font-family $atlas
    paddint-top 5%
  

  span#ass-instance
    color rgba(186,186,186,0.4)
    opacity 1


  .scroll-script-line
    color rgba(186, 186, 186, 0)
    

  .scroll.active
    display inline
    opacity 1
    

  .scroll-container
    background-color #d3bfa6

  .scroll__graphic
    background-image #d3bfa6
    font-family $atlas
    position inline
    margin 0
    pointer-events none
    -webkit-transform translate3d(0, 0, 0)
    -moz-transform translate3d(0, 0, 0)
    transform translate3d(0, 0, 0)
    max-width 40rem
    position relative
    left 50%
    margin-left -20rem

  .step 
    margin: 0 auto 0 auto
    color: #333333
    pointer-events: none
    font-family $atlas
    display flex
    justify-content center

  .step p 
    text-align: left
    padding: 1.5rem
    margin 0 1.5rem 0 1.5rem
    font-size: 1.2rem
    line-height: 1.5
    font-family $national
    max-width 40rem

  .usage-examples 
    color #333333
    display block
    font-size 12px
    text-align left
    margin 1% 5% 1% 5%
    font-family $atlas

  .usage-examples.active
    display block
    pointer-events auto

  .usage-examples-hidden 
    display block

  .stack
    position relative
    opacity 0
    display none
    padding-top 5%
    background-color #d3bfa6

  .stack.active
    display flex
    justify-content center
    height 100%

  
  .stack__container .chart
    font-family $atlas
    text-align center
    overflow hidden
    max-width 40rem

  .stack__container .prose
    text-align: left
    font-size: 1.2rem
    line-height: 1.5
    font-family $national
    max-width 40rem

  .slider-container 
    width: 100%
    position: absolute
    top: 70%
    pointer-events: auto
  
  .slider 
    -webkit-appearance: none
    appearance: none
    border-radius: 3px
    width: 80% 
    left:10%
    height: 3px
    background: #333333
    outline: none 
    opacity: 0.7
    -webkit-transition: .2s 
    transition: opacity .2s
    position: absolute

  .slider:hover 
    opacity: 1
  

  .slider::-webkit-slider-thumb 
    -webkit-appearance: none
    appearance: none
    width: 15px
    height: 15px
    border-radius: 50%
    background: #b2eafc
    cursor: pointer

  #iceberg0
    pointer-events auto
  

  .slider::-moz-range-thumb 
    width: 10px 
    height: 10px 
    border-radius: 50%
    background: #b2eafc
    cursor: pointer 

  .sliderIceberg 
    -webkit-appearance: none
    appearance: none
    border-radius: 3px
    width: 80% 
    left:10%
    height: 3px
    background: #333333
    outline: none 
    opacity: 0.7
    -webkit-transition: .2s 
    transition: opacity .2s
    position: absolute

  .sliderIceberg:hover 
    opacity: 1
  

  .sliderIceberg::-webkit-slider-thumb 
    -webkit-appearance: none
    appearance: none
    width: 15px
    height: 15px
    border-radius: 50%
    background: #b2eafc
    cursor: pointer
  

  .sliderIceberg::-moz-range-thumb 
    width: 10px 
    height: 10px 
    border-radius: 50%
    background: #b2eafc 
    cursor: pointer 
  
  circle.active
    opacity:1
  

  .year-label 
    font-size: 12px
    fill: #333333
    transform: translate(-15px, 0px)

  .left-shape
    shape-outside: polygon(0 0, 50% 0, 10% 20%, 10% 60%, 50% 100%, 0% 100%)
    float: left
    width: 50%


  #left-shape1
    height: 101em
  

  #right-shape1
    height: 101em
  

  #left-shape2
    height: 65em
  

  #right-shape2
    height: 65em
  

  #left-shape3
    height: 60em

  #right-shape3
    height 60em

  #left-shape4
    height: 150em

  #right-shape4
    height 150em

  .right-shape
    shape-outside: polygon(100% 0, 50% 0, 90% 20%, 90% 60%, 50% 100%, 100% 100%)
    float: right
    width: 50%
    
  .overlay 
    position fixed
    display none
    width 40rem
    height 100%
    top 0
    left 50%
    margin-left -20rem
    right 0
    bottom 0
    background-color rgba(245,245,245,0.5)
    z-index 2
    cursor pointer

  .overlay.active
    display flex

  .time-line 
    position relative
    top 10%
    justify-content center

  .citationContainer 
    background-color #b2eafc
    width 80%
    left 50%
    margin-left -40%
    top 37%
    position fixed
    padding-left 5%
    padding-right 5%
    padding-top 2%
    padding-bottom 2%
    text-align left
    color #333333
    font-family $roboto

  .citationContainerIceberg 
    background-color #b2eafc
    width 80%
    left 50%
    margin-left -40%
    top 37%
    position absolute
    padding-left 5%
    padding-right 5%
    padding-top 2%
    padding-bottom 2%
    text-align left
    color #333333
    font-family $roboto

  .chart-title
    font-family $atlas
    text-align left
    font-weight bold
    margin-left 5%
    font-size 32px

  .stack__container .chart-title
    text-align center
    margin-left 0%

  .sense-container
    position absolute
    bottom 80%
    width 80%
    left 50%
    margin-left -40%
    text-align left
    display inline-block

  .word-container
    text-align left
    font-size 40px
    font-family $roboto
    line-height 40px
    padding-left 3%
    position absolute
    top 3%

  .active
    opacity: 1
    z-index: 101
